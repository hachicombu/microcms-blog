---
import { Blog } from "../library/microcms";
import CardTags from "./CardTags.astro";
import { getEyecatch, setDateFormat } from "../library/common";
const { blogs } = Astro.props;
---

{
  // 配列の中身が１以上ある場合
  blogs.totalCount > 0 ? (
    blogs.contents.map((blog: Blog) => {
      const imageUrl = getEyecatch(blog);
      const date = setDateFormat(blog);

      return (
        <a href={`/${blog.id}`}>
          <article>
            <div class="article__img">
              <img width="1200" height="630" src={imageUrl} />
            </div>

            <div class="article__text">
              <p class="article__date">
                <time datetime={blog.publishedAt}>{date}</time>
              </p>

              <CardTags blog={blog} />
              <h2>{blog.title}</h2>
            </div>
          </article>
        </a>
      );
    })
  ) : (
    <p>まだ記事がありません</p>
  )
}

<style lang="scss">
  .article__img {
    width: 340px;
    height: 230px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;

    &::before {
      background: linear-gradient(45deg, #d8ffff, #87e7ff);
      content: "";
      display: block;
      height: 100%;
      left: 0;
      opacity: 0;
      position: absolute;
      top: 0;
      transition: opacity, 0.25s;
      width: 100%;
      z-index: 1;
      pointer-events: none;
    }

    &:hover img {
      transform: scale(1.05);
    }

    &:hover::before {
      opacity: 0.1;
    }

    & img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform, 0.25s;
    }
  }

  .article__text {
    margin-top: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    & p {
      font-size: 12px;
    }
  }

  .article__date {
    font-size: 14px;

    & time {
      letter-spacing: 0.02em;
    }
    & time::before {
      content: url("/assets/icon-clock.svg");
      display: inline-block;
      vertical-align: middle;
      margin-right: 2px;
    }
  }

  h2 {
    font-size: 18px;
    font-weight: bold;

    @include mq(md) {
      font-size: 20px;
    }
  }
</style>
