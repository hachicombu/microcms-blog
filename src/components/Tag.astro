---
const { tag } = Astro.props;
---

<a href={`/tags/${tag.id}`}><span>{tag.name}</span></a>

<style lang="scss">
  a {
    border: 1px solid #000;
    padding: 5px 6px;
    border-radius: 5px;
    font-size: 12px;
    vertical-align: middle;

    &::before {
      content: url("/assets/tag.svg");
      width: 12px;
      height: 12px;
      margin-right: 3px;
      vertical-align: bottom;
    }

    &:not(:last-child) {
      margin-right: 10px;
    }
  }
</style>
