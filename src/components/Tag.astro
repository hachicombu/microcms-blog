---
import { TagType } from "../library/microcms";
const { tag, isLink } = Astro.props;
interface Props {
  tag: TagType[];
  isLink?: boolean;
}
---

{
  isLink ? (
    <a href={`/tags/${tag.id}`}>
      <span>{tag.name}</span>
    </a>
  ) : (
    <span class="tag-inline">{tag.name}</span>
  )
}

<style lang="scss">
  a,
  .tag-inline {
    border: 1px solid #000;
    padding: 5px 6px;
    border-radius: 5px;
    font-size: 12px;
    vertical-align: middle;

    &::before {
      content: url("/assets/icon-tag.svg");
      width: 12px;
      height: 12px;
      margin-right: 3px;
      vertical-align: bottom;
    }
  }
</style>
