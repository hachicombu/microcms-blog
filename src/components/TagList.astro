---
import { TagType, getAllTags } from "../library/microcms";
import Tag from "./Tag.astro";

const allTags = await getAllTags({ fields: ["id", "name"] });
---

<!-- Footer上のタグ一覧 -->
<div class="footer__tag-list">
  <p>Tag</p>
  <div class="tags">
    {allTags.contents.map((tag: TagType) => <Tag tag={tag} />)}
  </div>
</div>

<style lang="scss">
  .footer__tag-list {
    max-width: 100%;
    @include mq(md) {
      max-width: 60%;
    }
  }
  p {
    font-size: 24px;
    margin-bottom: 20px;
    &::before {
      content: "";
      display: inline-block;
      width: 3px;
      height: 28px;
      background-color: #000;
      vertical-align: middle;
      margin-right: 10px;
    }
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }
</style>
