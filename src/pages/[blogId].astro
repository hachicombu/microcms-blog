---
import Layout from "../layouts/Layout.astro";
import { getBlogs, getBlogDetail } from "../library/microcms";
import { getEyecatch, setDateFormat } from "../library/common";
import ArticleDate from "../components/ArticleDate.astro";
import CardTags from "../components/CardTags.astro";
// syntax highlight
import { load } from "cheerio";
import hljs from "highlight.js";
import "highlight.js/styles/github-dark-dimmed.css";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: { blogId: content.id },
  }));
}

//記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId);

const imageUrl = getEyecatch(blog);
const date = setDateFormat(blog);

// cheerioでコードブロックを抜き出し、シンタックスハイライトを適用
const $ = load(blog.content);
$("pre code").each((_, elm) => {
  const result = hljs.highlightAuto($(elm).text());
  $(elm).html(result.value);
  $(elm).addClass("hljs");
});
blog.content = $.html();
---

<Layout title={blog.title}>
  <main>
    <article>
      <div class="article__data">
        <ArticleDate blog={blog} />
        <CardTags blog={blog} />
        <h1 class="title">{blog.title}</h1>
      </div>
      <div class="article__img">
        <img width="960" height="540" src={imageUrl} />
      </div>
      <div class="post" set:html={blog.content} />
    </article>
  </main>
</Layout>

<style lang="scss">
  main {
    max-width: 860px;
    width: 90%;
    margin: 60px auto 128px;
  }
  .article__data {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 16px;
  }
  article h1 {
    font-size: 26px;
    font-weight: bold;
  }
  .article__img {
    margin-bottom: 16px;
    & img {
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      object-fit: cover;
      aspect-ratio: 16 / 9;
    }
  }
</style>
