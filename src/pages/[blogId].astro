---
import Layout from "../layouts/Layout.astro";
import { getBlogs, getBlogDetail } from "../library/microcms";
import { getEyecatch, setDateFormat } from "../library/common";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: { blogId: content.id },
  }));
}

//記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId);

const imageUrl = getEyecatch(blog);
const date = setDateFormat(blog);
---

<Layout title="My first blog with Astro" isTop={false}>
  <main>
    <img width="1200" height="630" src={imageUrl} />
    <h1 class="title">{blog.title}</h1>
    <p>公開日：<time datetime={blog.publishedAt}>{date}</time></p>
    <div class="post" set:html={blog.content} />
    {
      blog.tag && (
        <div>
          {blog.tag.map((item) => (
            <span>
              <a href={`/tags/${item.id}`}>{item.name}</a>
            </span>
          ))}
        </div>
      )
    }
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1em;
    max-width: 60ch;
  }
</style>
